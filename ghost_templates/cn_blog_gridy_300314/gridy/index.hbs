{{!< default}}


{{! The main content area on the homepage }}
<main id="main-content" role="main">
    <div class="megafolio-container">
        {{! Each post will be output using this markup }}
        {{#foreach posts}}
            <article id="post-{{id}}" class="{{post_class}} mega-entry" data-width="400" data-height="400">
                <a class="post-link" href="{{url}}">
                    <div class="bottom-fade"></div>
                    <div class="post-text-layer">
                        <header class="post-header">
                            <h2 class="post-title">{{{title}}}</h2>
                            <div class="post-meta">
                                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD, YYYY"}}</time>
                            </div>
                        </header>
                        <section class="post-excerpt">
                            <p>{{excerpt}}&hellip;</p>
                        </section>
                    </div><!--.post-text-layer-->
                </a><!--.post-link-->
                <div class="post-content-digest" style="display:none">{{content words="50"}}</div>
            </article>
        {{/foreach}}
    </div>
    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
</main>